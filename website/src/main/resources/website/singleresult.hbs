<!-- Header -->
{{> header }}

{{> searchform }}

<!-- main-content -->
<section id="content">
	<div class="container">
		<div class="row">
				<div class="col-sm-8">
				   <h2>{{ name.name }}
						<button class="btn btn-default btn-sm" id="tts-button">
							<i class="fa fa-volume-up" data-toggle="tooltip" data-placement="top" title="{{message "lang.play-sound"}}"></i>
						</button>
					</h2>										
					
					<p>{{message "lang.pronounciation"}} {{ name.pronunciation}}</p>
					

							
						<a class="btn btn-sm btn-default">
							{{message "lang.share"}} <i class="fa fa-share-alt"></i>
						</a>

						<a class="btn btn-sm btn-default" href="#/improve-entry" data-toggle="modal" data-target="#improveEntryModal">
							{{message "lang.improve-entry"}} <i class="fa fa-pencil"></i>
						</a>
								
								
						<hr>
						<p>{{message "lang.submitby"}} {{ name.submittedBy }}</p>			
					

					
						<h4>{{message "lang.meaningof"}} {{ name.name }}</h4>
						<hr>
						<p>{{ name.meaning }}</p>

						<h4>{{message "lang.extendedmeaningof"}}</h4>
						<hr>
						<p>{{name.extendedMeaning }}</p>
					
					<!-- /meaning of name -->

						<h4>{{message "lang.morphology"}}</h4>
						<hr>
						<p>{{name.morphology}}</p>
					
					<!-- /morphology -->

					
						<h4>{{message "lang.etymology"}}</h4>
						<hr>
			            
			            {{#each name.etymology}}
			               <strong>{{this.part}}</strong><span> - {{this.meaning}}</span><br>
						{{/each}}
			            
					
					<!-- /etymology -->

					
						<h4>{{message "lang.geolocation"}}</h4>
						<hr>
						<p>{{message "lang.commonin"}} {{name.geoLocation.place}}</p>
					
					<!-- /geolocation -->

					
						<h4>{{message "lang.variants"}}</h4>
						<hr>
					
					<!-- /variants -->

					
						<h4>{{message "lang.see-also"}}</h4>
						<hr>
					
					<!-- /see also -->
				</div>			

			<!-- sidebar -->
			<aside>
				<div class="col-md-4">
					{{> rsidebar }}
				</div>
			</aside>
			<!-- /sidebar -->
		</div>
	</div>
</section>
<!-- /main-content -->

<!--Improve Entry Modal -->
<div class="modal fade" id="improveEntryModal" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
		    <div class="modal-header">
		    	<h3>{{message "lang.improve-entry.help-us"}} "{{ name.name }}"</h3>
		    </div>
			<form name="name_feedback" class="modal-body">
				<div class="form-group">
            		<p class="lead">{{message "lang.improve-entry.sub-text"}}</p>
            		<textarea name="improveEntry" id="improveEntry" class="form-control" rows="5" required="true"></textarea>                		
        		</div>
        		<button type="submit" id="submitEntry" class="btn btn-success btn-lg">Submit Feedback</button>
        		&nbsp;&nbsp;&nbsp;&nbsp;<a href="#/entries/{nameEntry}" data-dismiss="modal">Cancel</a>
			</form>
		</div>
	</div>
</div>
<!--/Improve Entry Modal -->

<!-- footer -->
{{> footer }}